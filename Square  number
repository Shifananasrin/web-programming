lower = int(input("Enter lower limit: "))
upper = int(input("Enter upper limit: "))

# Print perfect squares
print("Perfect squares:")
for i in range(lower, upper + 1):
    j = int(i ** 0.5)
    if j * j == i:
        print(i)

# Print even perfect squares
print("Even perfect squares:")
for i in range(lower, upper + 1):
    j = int(i ** 0.5)
    if j * j == i and i % 2 == 0:
        print(i)
